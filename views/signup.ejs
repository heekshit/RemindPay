    <style>
        body{
margin:0 ;
padding:0;
font-family: montserret;
background-image: url("images/app.png");
background-size: cover;
background-repeat: no-repeat;
}


.center{
    position:absolute;
    top:48%;
    left: 25%;
    transform:translate(-50%,-50%);
    width:300px;
    /* height:300px; */
    background:white;
    border-radius: 10px;
    border:3px solid;
    border-color: #242424;
}
.center h1{
    text-align:center;
    padding:0 0 15px 0;
    border-bottom:1px solid silver;
}
.center form{
    padding:0px 40px;
    box-sizing: border-box;
}
form .text_feild{
    position:relative;
    border-bottom:2px solid #adadad;
    margin:20px 0;

}
.text_feild input{
    width:100%;
    padding:0 5px;
    height:40px;
    font-size:16px;
    border:none;
    background:none;
    outline:none;
}
.text_feild label{
    position: absolute;
    top: 50%;
    left:5px;
    color:#adadad;
    transform:translateY(-50%);
    font-size:16px;
    pointer-events:none;

}
.text_feild span::before{
    content:'';
    position:absolute;
    top:40px;
    left:0;
    width:0%;
    height:2px;
    background:black;
    transition:.5s;
}
.text_feild input:focus ~label,
.text_feild input:valid ~label{
    top:-5px;
    color:black;
}
.text_feild input:focus ~ span::before,
.text_feild input:valid ~span::before{
    width:100%;
}
input[type="submit"]{
    width:100%;
    height:40px;
    border:1px solid;
    background:none;
    border-radius:25px;
    font-size:18px;
    color:#800000;
    font-weight:700;
    cursor:pointer;
    outline:none;
}
input[type="submit"]:hover{
    color:white;
    background-color: #800000;
    border-color:#800000;
    transition:.5s;
}
.signup_link{
    margin:30px 0;
    text-align:center;
    font-size:16px;
    color:#666666;
}
.signup_link a{
    color:#2691d9;
    text-decoration:none;
}
.signup_link a:hover{
    text-decoration:underline;
}
    </style>
</body>
</html>  